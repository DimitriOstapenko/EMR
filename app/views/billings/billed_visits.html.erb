<% ttl_visits = 0 %>
<div class='spacer-30'></div>
<div class='col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4'>
<h3 class='display-1'>Billed Visits so far in this billing cycle (since <%= @prev_cycle_end_date %>)</h3>
<div class="well">
<table class="tbl"> 
  <thead>
      <tr>
          <th class="tbl_md">Doctor</th>
          <th class="tbl_md">Visits</th>
      </tr>
  </thead>
  <tbody>
	  <% @billed_visits.each do |doc_id,visits| %>
	  <% doc = Doctor.find(doc_id) %>
	  <% ttl_visits += visits %>
	  <tr>
	     <td><%= doc.lname %></td>
	     <td><%= visits %></td>
	  </tr>
  	  <% end %>
  </tbody>
  <tfoot>
    <tr style="height:30px">
	    <td><b>Total visits this cycle</b></td>
	    <td><b><%= ttl_visits %></b></td>
    </tr>
  </tfoot>

</table>
</div>
</div>
