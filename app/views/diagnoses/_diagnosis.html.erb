     <tr>
        <% if remote %>
          <td><%= link_to "#{diagnosis.code}", diagnosis, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %> </td>
        <% else %>
	  <td><%= link_to "#{diagnosis.code}", diagnosis %> </td>
	<% end %>
	<td><%= diagnosis.descr %></td> 
	<td><%= diagnosis.prob_type %></td> 
	<td><%= diagnosis.active_str %> </td> 
	<% unless current_user.doctor? %>
	<td class="td-center">
        <% if remote %>
          <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_diagnosis_path(diagnosis), remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %>
        <% else %>
          <%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_diagnosis_path(diagnosis) %>
        <% end %>
	</td>
        <% end %>
        <% if current_user.admin?  %>
	  <td class="td-center"><%= link_to '<i class="glyphicon glyphicon-remove-sign"></i>'.html_safe, diagnosis, method: :delete, data: { confirm: "You sure?" } %> </td>
        <% end %>
     </tr>

