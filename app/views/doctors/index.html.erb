<% provide(:title, 'All doctors') %>
<%= render "shared/modal", size: 'lg' %>

<table class="tbl table-hover"> 
  <thead>
      <tr>
          <th class='tbl_lmd'>Name</th>
          <th class='tbl_sm'>Type</th>
          <th class='tbl_sm'>Spec.</th>
          <th>Provider#</th>
          <th>Group#</th>
          <th class='tbl_sm'>Bills?</th>
	  <th class='tbl_lg'> Address</th>
          <th class='tbl_md'>City</th>
          <th>Phone </th>
	  <% unless current_user.doctor? %>
	      <th class='tbl_sm'> </th>
	  <% end %>
	  <% if  current_user.admin?  %>
	      <th class='tbl_sm'> </th>
	  <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @doctors, remote: device_is_desktop? %>

  </tbody>
</table>

<div class="bottom_buttons ">
<%= will_paginate @doctors, class: "btn" %>
<%= button_to "Add New Doctor", new_doctor_path, class: "btn btn-primary col-md-12", method: :get %>
</div>
