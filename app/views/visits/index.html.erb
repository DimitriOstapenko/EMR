<% provide(:title, 'All visits') %>
<%= render "shared/modal" %>

<table class="tbl table-hover" >
  <thead>
      <tr>
          <th>Date</th>
          <th class="tbl_lg">Patient</th>
          <th class="tbl_sm">Type</th>
 	  <th>Doctor</th>
          <th>Diag Code</th>
          <th>Proc Code</th>
          <th>Bill Ref</th>
          <th class="tbl_sm"></th>
      </tr>
  </thead>
  <tbody>
    Visits billed, but not paid by OHIP this year: <%= @visits.count %> 

    <%= render partial: 'unpaid_visit', collection: @visits, as: :visit %>

  </tbody>
</table>

<%= will_paginate(@visits) %>

