<% date = params[:date].to_date rescue Date.today %>
<% provide(:title, "Day Sheet for " + date.to_s  ) %>
<% provide(:button_text, 'Save changes') %>

<% if date.today? %>
	<% doc_name = current_doctor.lname rescue '' %>
	<% suffix = 'Current doctor: ' + doc_name %>
<% end %>

<% if @daysheet.count >0 %>
		   <h1> Visits for <%= date.to_s  %> (<%= @daysheet.count %>)  <%= suffix %> </h1> 

<ul class="users">
<table class="tbl" >
  <thead>
      <tr>
	  <th class="tbl_sm">Time</th>
          <th class="tbl_md">Patient</th>
          <th class="tbl_lsm">Health #</th>
          <th class="tbl_xs">Ver.</th>
          <th class="tbl_sm">Doctor</th>
          <th class="tbl_sm">Diagnosis</th>
          <th class="tbl_xmd">Procedures</th>
          <th class="tbl_xs">Units</th>
          <th class="tbl_xs">Type</th>
          <th class="tbl_sm">Status</th>
          <th class="tbl_sm"> </th>
      </tr>
  </thead>
  <tbody>

  <% @daysheet.each do |v| %>
     <%= render 'visit', visit: v %>
     <%# render 'visits/visit', visit: v %>
  <% end %>

  </tbody>
</table>
</ul>
<p>
<%= will_paginate(@daysheet) %>

<% end %>

<% if date.today? && !current_doctor %>
   <%= render 'set_doctor' %> 
<% end %>
