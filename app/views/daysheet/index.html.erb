<% date = params[:date].to_date rescue Date.today %>
<% provide(:title, "Day Sheet for " + date.to_s  ) %>
<% provide(:button_text, 'Save changes') %>

<% if current_doctor && date == Date.today%>
	<div id="doc_in"><small>Doctor in: Dr. <b><%= current_doctor.lname rescue '' %></b>  Est. Wait: <b><%= current_wait_time %></b> min.</small></div>
<% end %>

<% if @daysheet.count >0 %>
	<h1> Visits for <%= date.to_s  %> (<%= @daysheet.count %>) </h1>

<table class="tbl table-hover" >
  <thead>
      <tr>
	  <th class="tbl_sm">Time</th>
          <th class="tbl_md">Doctor</th>
          <th class="tbl_md">Patient</th>
          <th class="tbl_lsm">Health #</th>
          <th class="tbl_lsm">Ver.</th>
          <th class="tbl_xmd">Diagnosis</th>
          <th class="tbl_xmd">Procedures</th>
          <th class="tbl_sm">Units</th>
          <th class="tbl_sm">Type</th>
          <th class="tbl_sm">Status</th>
          <% if current_user.admin?  %>
          <th class="tbl_sm"> </th>
  	  <% end %>
      </tr>
  </thead>
  <tbody>

  <% @daysheet.each do |v| %>
     <%= render 'visit', visit: v %>
  <% end %>

  </tbody>
</table>

<%= will_paginate(@daysheet) %>

<% end %>

