<div class="p-3">
<%= simple_form_for :patient, url: patients_lookup_path do |f| %>
  <%= f.error_notification %>

<small>
<h5 class='card-title ml-2'>Patient Lookup</h5>
<div class="card bg-light mb-3">
<div class="card-body">
<div class="row">
  <div class="col-md-4">
  <img src="/images/on_32_tr.png" width=32><b> Your Ontario Health Card#</b>
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
    <%= f.input :ohip_num, label: false, placeholder: 'XXXXXXXXXXX AA' %>
  </div>
  </div>

  <div class="col-md-2">
  <%= f.label '', class: 'pt-4' %>
  <div style="width:100px; display:none" id="register_button">
  <%# button_to 'Register', patients_lookup_path, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window', class:"btn btn-primary", method: 'get' %>
  <%= button_to 'Register', patients_lookup_path, class:"btn btn-primary", method: 'get' %>
  </div>
  <div style="width:100px; display:none" id="login_button">
  <%= button_to 'Log In', new_user_session_path, class:"btn btn-primary", method: 'get' %>
  </div>
  </div>

  <div class="col-md-4 pt-3 ml-3">
    <div class="text-muted" style="font-size: 1.1em;">
      <span class="glyphicon glyphicon-duplicate" aria-hidden="true"></span>
      If you have been to our clinic we will look up your patient profile and your visit history. Once registered, you will have access to your record and will be able to book a visit.
    </div>
  </div>
  
  <div class="col-md-1 pt-4 ml-3">
    <img src="/images/card.jpg" width=100>
  </div>
</div>

<span class="text-success" id="results"></span>

<div style="float:right; margin-right: 5px;" >
  <img src="/images/on_logo1_tr.png" width='90px' >
</div>

</div> 
</div>
</small>

<% end %>
</div>

<script>
$(document).ready(function() {
var ohip_num = document.getElementById("patient_ohip_num");

$(ohip_num).keyup(function () {
  if ($(this).val().length > 11 ) {
     var val = $(this).val().replace(/\W/g,'');
     get_patient( val );
  }
});

});

</script>


