<% provide(:title, "Log in") %>

<div class="spacer-30"></div>
<div class="col-md-2 col-sm-4 col-md-offset-5 col-sm-offset-4">
<h3 class='display-1'>Sign In</h3>
 <div class="well">

    <%= simple_form_for :session, url: login_path do |f| %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :remember_me, as: :boolean  %> 
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>

      <div class="spacer-10"></div>
      <p> <span style="float:right; font-size: 12px"><%= link_to 'Forgot password', new_password_reset_path %></span> </p>
    <% end %>

 </div>
</div>


