<tr>
<% if paystub.filespec.present? && File.exists?(paystub.filespec) && device_is_desktop? %>
  <td><%= link_to paystub.id, paystub_path(paystub),  remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %></td>
<% else %>
  <td><%= paystub.id %></td>
<% end %>
<td><%= paystub.doctor.lname %></td>
<td><%= "#{paystub.month}/#{paystub.year}" %></td>

<td><%= paystub.claims %></td>
<td><%= paystub.services %></td>
<td><%= sprintf("$%.2f",paystub.gross_amt) %></td>
<td><%= sprintf("$%.2f",paystub.net_amt) %></td>
<td><%= paystub.ra_file %></td>
<% if paystub.filespec.present? && File.exists?(paystub.filespec) %>
  <td>&nbsp;&nbsp;<%= link_to '<i class="glyphicon glyphicon-download"></i>'.html_safe, download_paystub_path(paystub)  %></td>
<% else %> <!-- regenerate paystub -->
  <td><%= link_to '<i class="glyphicon glyphicon-question-sign"></i>'.html_safe, download_paystub_path(paystub)  %></td>
<% end %>

<% if current_user.admin?  %>
	<td><%= link_to '<i class="glyphicon glyphicon-trash"></i>'.html_safe, paystub_path(paystub), method: :delete, data: { confirm: "Are you sure you want to delete paystub #{paystub.id} for doctor #{paystub.doctor.lname}" } %></td>
<% end %>
</tr>

