<% provide(:title, 'All patients') %>

<table class="tbl table-hover"> <!--class="table table-hover table-condensed" > -->
  <thead>
      <tr>
          <th class="tbl_md">Name</th>
          <th class="tbl_xs">Gen</th>
          <th class="tbl_lsm">Health #</th>
          <th class="tbl_xs">Ver</th>
	  <th class="tbl_lsm">Expiry</th> 
	  <th class="tbl_xs">Type</th> 
	  <th class="tbl_lsm">DOB</th> 
          <th class="tbl_xs">Age</th>
	  <th class="tbl_lsm">Last Visit </th>
	  <th class="tbl_xs">Visits</th>
          <th class="tbl_lsm">Phone</th>
 	  <th class="tbl_sm">File#</th>
 	  <th class="tbl_xlg">Address</th>
 	  <th class="tbl_sm">Chart</th>
      <% if current_user.admin?  %>
	  <th class="tbl_sm"> </th>
      <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @patients %>

  </tbody>
</table>

<div class="bottom_buttons ">
<%= will_paginate @patients, class: "btn" %> 
<%= button_to "New Patient", new_patient_path, class: "btn btn-primary col-md-12 ", method: 'get'  %>
</div>

