<% provide(:title, 'All patients') %>
<%= render 'shared/modal' %>

<table class="tbl table-hover"> <!--class="table table-hover table-condensed" > -->
  <thead>
      <tr>
          <th class="tbl_lmd">Name</th>
          <th class="tbl_sm">Gen</th>
          <th class="tbl_sm">Age</th>
	  <th class="tbl_sm">Type</th> 
	  <th class="tbl_md">Last Visit </th>
          <th>HC/IFH #</th>
	  <th>Expiry</th> 
	  <th>DOB</th> 
          <th>Phone</th>
 	  <th class="tbl_sm">Lbl</th>
 	  <th class="tbl_sm"></th>
	  <%= "<th class='tbl_sm'></th>".html_safe if current_user.admin? %>
          <th class="tbl_sm">Chrt</th>
      </tr>
  </thead>
  <tbody>

  <%= render @patients %>

  </tbody>
</table>

<div class='row'>
<div class="bottom_buttons">
<% unless current_user.doctor? %>
<%= button_to "New Patient", new_patient_path, remote: device_is_desktop?, 'data-toggle':  "modal", 'data-target': '#modal-window', class: "btn btn-primary col-md-2", method: "get"  %>
<% end %>
</div>

<div class="bottom_nav">
<%= will_paginate @patients, class: "btn" %> 
</div>
</div>


