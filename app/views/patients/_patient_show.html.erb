<% remote = device_is_desktop? %>
<% hcnum = "Health Card: #{@patient.ohip_num} #{@patient.ohip_ver} (#{@patient.hin_prov}) Expires: #{@patient.hin_expiry}" %>
<% ifhnum = "IFH #: #{@patient.ifh_number}" if @patient.ifh_number.present? %> 

<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
<pre class="pre-scrollable-lg">
<% if @patient.pat_type == CASH_PATIENT %>
<b>CASH PATIENT</b> <%= link_to '<i class="glyphicon glyphicon-credit-card"></i>'.html_safe, label_patient_path(@patient), remote: remote, 'data-toggle':  "modal", 'data-target': '#modal-window',  method: 'get', onclick: "set_md_modal()" %>
<% else %>
<b>INSURED PATIENT</b> <%= link_to '<i class="glyphicon glyphicon-credit-card"></i>'.html_safe, label_patient_path(@patient), remote: remote, 'data-toggle':  "modal", 'data-target': '#modal-window',  method: 'get', onclick: "set_md_modal()" %>
<%= hcnum if hcnum.present? %>
<%= ifhnum if ifhnum.present? %>
<% end %>
<b><%= @patient.full_name %>: <%= "(#{@patient.maid_name})" if @patient.maid_name %></b> <%= @patient.age_str %> <%= @patient.full_sex %>; 
Born: <%= @patient.dob %><% if @patient.chart.present? %> <%= link_to '<i class="glyphicon glyphicon-copy"></i>'.html_safe, chart_patient_path(@patient) %> <% end %>
<%= "Phone: #{num_to_phone(@patient.phone)}" if @patient.phone.present? %> <%= "Mobile: #{num_to_phone(@patient.mobile)}" if @patient.mobile.present? %> <%= "Email: #{@patient.email}" if @patient.email.present? %> 
<%= "Address: #{@patient.addr_full}" if @patient.addr.present? %> 
<% if @patient.allergies.present? %>
Allergies: <%= @patient.allergies %>
<% end %>
<!-- active meds for this pat -->
<% if @patient.med_list %>
Medications:
     <%= @patient.med_list.join("\n     ") %>
<% end %> </b>
</pre>
	 
&nbsp; <%# render("medications", remote: remote) if @patient.medications.any? %>
&nbsp; <%# render("prescriptions", remote: remote) if @patient.prescriptions.any? %>
&nbsp; <%# render("invoices", remote: remote) if @patient.invoices.any? %>
&nbsp; <%# render("letters", remote: remote) if @patient.letters.any? %>
&nbsp; <%# render("referrals", remote: remote) if @patient.referrals.any? %>
&nbsp; <%# render("patient_docs", remote: remote) if @patient.patient_docs.any? %>

<font size=3>
<% if @patient.visits.count == 0 %>
  <p><b>  Welcome to our virtual clinic, <%= @patient.fname %>! You are all set for your first doctor appointment.</b></p>
<% end %>

<% unless @patient.has_visit_today? %>
<p><b> To book your visit, please click the button below. Describe the reason for your visit, upload any documents/pictures and save it. Doctor on duty will get in touch with you as soon as they can. Doctor will decide if you need in-person visit. Medications are renewed over the phone. </b></p>
<% end %>
</font>

  </section>

<% if @patient.has_visit_today? %>
  You appointment for today is registered. Please wait for the doctor to call you back at one of the numbers provided.

<% else %>
<div class="col-sm-2 col-md-8 col-md-offset-2 col-sm-offset-3 pt-5">
  <font size=3>
<%= button_to 'Yes, I would like callback from doctor', new_patient_visit_path(@patient), remote: remote, 'data-toggle':  "modal", 'data-target': '#modal-window', class:"btn btn-success btn-lg", method: 'get', disabled: @patient.has_visit_today?  %>
  </font>
</div>

  <div class="pt-3" style="float:right" ><small>* Only one appointment per patient per day is allowed by OHIP </small></div>
  <% end %>
</aside>

<div class="spacer-20"></div>

<%= render "patient_#{device_type}_visits" %>

</div>



