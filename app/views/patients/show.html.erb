<% provide(:title, @patient.full_name) %>

	<h1><%= @patient.full_name %> <%= @patient.mname %> :  Patient profile </h1>

<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
	   <pre class="pre-scrollable">
	<b>Name:</b> <%= @patient.full_name %> <%= @patient.mname %> <b>Type:</b> <%= PATIENT_TYPES.invert[@patient.pat_type] %>
	<b>DOB:</b> <%= @patient.dob %> : <%= @patient.age %> y/o  <%= @patient.sex %>
	<b>Health Card:</b> <%= @patient.ohip_num %> <%= @patient.ohip_ver %> (<%= @patient.hin_prov %>) <b>Expires:</b> <%= @patient.hin_expiry %>
	<b>Phone:</b> <%= num_to_phone(@patient.phone) %>  <b>Mobile:</b> <%= num_to_phone(@patient.mobile) %> <b>Email:</b> <%= mail_to @patient.email %>
	<b>Address:</b> <%= @patient.addr %>
		    <%= @patient.city %> <%= @patient.prov %> 
		    <%= @patient.postal %>
		    <%= @patient.country %>
	<b>Family Doctor: </b> <%= @patient.family_dr %>
	<b>Pharmacy:</b> <%= @patient.pharmacy %> : <%= num_to_phone(@patient.pharm_phone) %>
	<b>Emergency Contact:</b> <% @patient.alt_contact_name %> <b> Phone: </b> <% @patient.alt_contact_phone %>
	<b>Last Visit:</b> <%= @patient.last_visit_date %>
        <% if !@patient.chart_file.blank? %>
	<b>Chart File:</b> <%= link_to 'Chart', chart_patient_path(@patient) %>
        <% end %>
	<b>Allergies</b>: <%= @patient.allergies %>
	<b>Medications</b>: <%= @patient.medications  %>
	<b>Notes</b>: <%= @patient.notes %>
	<b>Created:</b> <%= @patient.entry_date %>
	<b>Last Modification By:</b> <%= @patient.lastmod_by %>
           </pre>
      </h1>
    </section>
    <section class="buttons">
	    
    <%= button_to "New Visit", new_patient_visit_path(@patient), class:"btn btn-primary", method: 'get' %>
    <p>
    <%= button_to "Edit Patient", edit_patient_path(@patient), class:"btn btn-primary", method: 'get' %>
    <p>
    <%= button_to "Print Label", label_patient_path(@patient), class: "btn btn-primary", method: 'get'  %>

    </section>
  </aside>
  <div class="col-md-6">
    <h3>Visits: (<%= @patient.visits.count %>)</h3>
    <% if @patient.visits.any? %>
        <table class="tbl">
  	  <thead>
	  <tr>
	    <th class="tbl_xlg">Date</th>
	    <th class="tbl_lg">Doctor</th>
	    <th>Diagnosis</th>
	    <th class="tbl_xlg">Procedure(s)</th>
	    <th>Type</th>
	    <th>Status</th>
	  </tr>
	  <tbody>

        <%= render @visits %>

          </tbody>
	</table>
	<%= will_paginate @visits %> 
    <% end %>
  </div>
</div>


