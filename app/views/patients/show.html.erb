<% provide(:title, @patient.full_name) %>

	<h1><%= @patient.full_name %> -  Patient profile </h1>

<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
	   <pre>
	      Name: <%= @patient.full_name %>
	      DOB: <%= @patient.dob %> : <%= @patient.age %> y/o  <%= @patient.sex %>
	      Health Card: <%= @patient.ohip_num %> <%= @patient.ohip_ver %> (<%= @patient.hin_prov %>) Expires: <%= @patient.hin_expiry %>
	      Phone: <%= number_to_phone(@patient.phone) %>
	      Mobile: <%= number_to_phone(@patient.mobile) %>
	      Addr: <%= @patient.addr %>
		    <%= @patient.city %> <%= @patient.prov %> 
		    <%= @patient.postal %>
		    <%= @patient.country %>
	      Family Doctor: Dr. <%= @patient.family_dr %>
	      Pharmacy: <%= @patient.pharmacy %> : <%= number_to_phone(@patient.pharm_phone) %>
	      Alt. Contact: <% @patient.alt_contact_name %> : <% @patient.alt_contact_phone %>
	      Last Visit: <%= @patient.last_visit_date %>
	      Created: <%= @patient.entry_date %>
	      Last Mod By: <%= @patient.lastmod_by %>
           </pre>
      </h1>
    </section>
    <section class="buttons">
	    
    <%= button_to "New Visit", new_patient_visit_path(@patient), class:"btn btn-primary", method: 'get' %>
    <p>
    <%= button_to "Edit Patient", edit_patient_path(@patient), class:"btn btn-primary", method: 'get' %>
    <p>
    <%= button_to "Print Label", label_patient_path(@patient), class: "btn btn-primary", method: 'get'  %>

    </section>
  </aside>
  <div class="col-md-6">
    <h3>Visits: (<%= @patient.visits.count %>)</h3>
    <% if @patient.visits.any? %>
      <ol class="microposts">
        <%= render @visits %>
      </ol>
    <% end %>
<%= will_paginate(@visits) %> <!-- , :renderer =>  WillPaginate::ActionView::LinkRenderer, class: 'pagination-sm') %> -->
  </div>
</div>


