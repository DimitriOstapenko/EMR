<% provide(:title, 'All users') %>

<table class="tbl2 table-hover table-striped table-bordered">
   <thead>
      <tr>
          <th>User</th>
          <th>Email</th>
          <th>Role</th>
	  <th>Active?</th>
	  <th>Created</th>
	  <th>Updated</th>
	  <th class='tbl_md'>Switch To</th>
	  <th class='tbl_sm'>Del</th>
      </tr>
  </thead>
  <tbody>

  <%= render @users %>

  </tbody>
</table>

<% if current_user.admin? %>
<div class="bottom_buttons ">
<%= will_paginate @users, class: "btn" %> 
<%= button_to "Add User", new_user_path, class: "btn btn-primary col-md-2 ", method: 'get'  %>
</div>
<% end %>
