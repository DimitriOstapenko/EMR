<% provide(:title, 'All users') %>

<table class="tbl table-hover">
   <thead>
      <tr>
          <th>Username</th>
          <th>Email</th>
	  <th>Created</th>
          <th>Admin</th>
<% if current_user.admin? %>
	  <th>&nbsp;</th>
	  <th>&nbsp;</th>
<% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @users %>

  </tbody>
</table>

<% if current_user.admin? %>
<div class="bottom_buttons ">
<%= will_paginate @users, class: "btn" %> 
<%= button_to "Add User", new_user_path, class: "btn btn-primary col-md-12 ", method: 'get'  %>
</div>
<% end %>
