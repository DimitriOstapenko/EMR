<div class="well">
<%= simple_form_for @form do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<!-- Row 1 -->
<div class="row">
  <div class="col-sm-6">
          <%= f.input :name %>
  </div>
  
  <div class="col-sm-2">
          <%= f.input :ftype, collection: FORM_TYPES, label: 'Form Type', include_blank: false %>
  </div>
  
  <div class="col-sm-2">
          <%= f.input :format, collection: FORM_FORMATS, include_blank: false  %>
  </div>
  
  <div class="col-sm-2">
	  <%= f.input :fillable, collection: [['No', 'false'], ['Yes', 'true']], include_blank: false %> </td>
  </div>
</div>


<!-- Row 2 -->
<div class="row">
  <div class="col-sm-12">
          <%= f.input :descr, label: 'Description' %>
  </div>
</div>
  
<!-- Row 3 -->
<div class="row">
  <div class="col-sm-6">
          <%= f.input :eff_date, label: 'Effective Date', html5: true %>
  </div>
  
  <div class="col-sm-6"> 
     <%= f.input :form, label: "Upload New Form", hint: "current: #{@form.form_identifier}" %> 
  </div>

</div>

 <!-- Row 5 -->

<div class="row">
    <div class="spacer-20"></div>
    <div class="col-sm-12">
    <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
</div>

<% end %>

</div>
