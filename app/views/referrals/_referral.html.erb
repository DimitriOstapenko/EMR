<% 
   patient = Patient.find(referral.patient_id) 
   to_doctor = Doctor.find(referral.to_doctor_id)
%>

    <tr>
	<td><%= link_to "#{referral.id}", referral, remote: remote, 'data-toggle':  "modal", 'data-target': '#modal-window' %> </td>
	<td><%= link_to patient.lname, patient %></td>
	<td><%= referral.date %></td> 
	<td><%= referral.doctor.lname %></td> 
	<td><%= to_doctor.lname %></td> 
	<td><%= referral.address_to %></td> 
	<td><%= referral.to_phone %></td> 
	<td><%= link_to '<i class="glyphicon glyphicon-download"></i>'.html_safe, download_referral_path(referral)  %></td>
	<td><%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_referral_path(referral), remote: remote, 'data-toggle':  "modal", 'data-target': '#modal-window' %></td>
	<td><%= link_to '<i class="glyphicon glyphicon-remove-sign"></i>'.html_safe, referral, method: :delete, data: { confirm: "Are you sure you want to delete referral # #{referral.id} ?" } %> </td>
     </tr>



