<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/rails_default' %>  
    <%= render 'layouts/shim' %>
  </head>

  <body>
   <div  class="container">
    <div id="header"> 
    <%= render 'layouts/header' %>
    </div>

      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <%= yield %>

   </div>
   <div id="footer">
      <%= render 'layouts/footer' if device_type == 'desktop'  %>
      <%= debug(params) if DEBUG_FLAG > 0 %>
   </div>

  
  </body>
</html>
