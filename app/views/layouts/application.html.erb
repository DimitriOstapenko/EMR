<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= render 'layouts/metatags' %>
    <%= render 'layouts/rails_default' %>  
    <%= render "shared/modal" if device_is_desktop? %>
    <link rel="icon"  href="/favicon.ico" sizes="16x16" />
  </head>

  <body>
  <%# render 'layouts/facebook_messenger' if Rails.env.production? %>
  <div class="container">
    <%= render 'layouts/navigation' %>
   <div id="body">
      <%= render 'layouts/messages' %>
      <%= yield %>
   </div>
  </div>

  <%= render "layouts/#{device_type}_footer"  %>
  <%# debug(params) if DEBUG_FLAG >0  %>
  <%= render 'layouts/salesiq_chat' %>
  </body>
</html>
