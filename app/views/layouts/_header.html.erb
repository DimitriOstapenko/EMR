<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Walk-In EMR", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

<% if logged_in? %> 
<% if controller_name == 'daysheet' %>
       <li> 
       <%= form_with  method: :get, skip_enforcing_utf8: :true  do |f| %>
	     <div class="form-group form-group-sm">
                <div class="col-sm-12">	     
		<%= f.date_field :datepicker, 'name' => 'date', :onChange => 'javascript: this.form.submit()' %>
		</div>
	     </div>
       <% end %>
       </li>
<% end %>
<% if controller_name == 'patients' %>
	<li class="nav-item active">
	<%= form_with url: patients_path, method: :get, skip_enforcing_utf8: :true do |f| %>  
	     <div class="form-group form-group-sm">
                <div class="col-xs-10">
		  <%= f.search_field :findstr, placeholder: 'Find patient', :onChange => 'javascript: this.form.submit()' %>
		</div>
	     </div>
     <% end %>
	</li>
<% elsif controller_name == 'doctors' %>
	<li class="nav-item active">
        <%= form_with url: doctors_path, method: :get, skip_enforcing_utf8: :true do |f| %>
             <div class="form-group form-group-sm">
                <div class="col-xs-10">
                  <%= f.search_field :findstr, placeholder: 'Find doctor', :onChange => 'javascript: this.form.submit()' %>
                </div>
             </div>
     <% end %>
        </li>
<% end %>

<li><%= link_to "Patients", patients_path %></li>
<li><%= link_to "Day Sheet", daysheet_index_path %></li>
<li><%= link_to "Billing", billings_path %></li>
<li> <%= link_to "Log out", logout_path, method: :delete %> </li>

<% if  current_user.admin?  %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Admin <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
	      <li><%= link_to "Profile", edit_user_path(current_user) %></li>
	      <li><%= link_to "Add User", signup_path(current_user) %></li>
              <li class="divider"></li>
	        <li><%= link_to "Users", users_path %></li>
          	<li> <%= link_to "Procedures", procedures_path, method: :get %> </li>
         	<li> <%= link_to "Diagnoses", diagnoses_path, method: :get %> </li>
         	<li> <%= link_to "Doctors", doctors_path, method: :get %> </li>
            </ul>
          </li>
<% end %>
<% else %>
          <li><%= link_to "Log in", login_path %></li>
<% end %>

      </ul>
    </nav>
  </div>
</header>

<script type="text/javascript">
$(document).on("focus", "[data-behaviour~='datepicker']", function(e){
    $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true, "todayBtn": true, "todayHighlight": true});
});
</script>
