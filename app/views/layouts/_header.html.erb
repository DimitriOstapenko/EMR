<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Walk-In EMR", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">

<% if controller_name == 'patients' %>
       <li> 
	       <%= form_with url: patients_path, method: :get, skip_enforcing_utfi8: :true  do |f| %>
	     <div class="form-group form-group-sm">
                <div class="col-xs-8">	     
			<%= f.text_field :datepicker, 'data-behaviour' => 'datepicker', 'name' => 'date',
			   :value => Date.today, :onChange => 'javascript: this.form.submit()' %>
		</div>
	     </div>
       <% end %>
       </li>
	<li class="nav-item active">
	<%= form_with url: patients_path, method: :get, skip_enforcing_utf8: :true do |f| %>  
	     <div class="form-group form-group-sm">
                <div class="col-xs-10">
		  <%= f.search_field :findstr, placeholder: 'Find patient', :onChange => 'javascript: this.form.submit()' %>
		</div>
	     </div>
     <% end %>
	</li>
<% end %>

        <li><%= link_to "Patients", patients_path %></li>
        <li><%= link_to "Day Sheet", daysheet_path %></li>
        <% if logged_in? %>
	  <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
	      <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>

<script type="text/javascript">
$(document).on("focus", "[data-behaviour~='datepicker']", function(e){
    $(this).datepicker({"format": "yyyy-mm-dd", "weekStart": 1, "autoclose": true, "todayBtn": true, "todayHighlight": true});
});

