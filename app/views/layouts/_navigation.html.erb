<% img = '<img src="/images/leaf.png" width=25>' %> 
<% if logged_in? %>
   <%= render "layouts/#{device_type}_#{current_user.role}_navigation" %>
<% else %>
<nav class="navbar navbar-expand-lg navbar-light">
  <ul class="nav navbar-nav navbar-left">
  <% if device_is_desktop? %>
    <li class="nav-item"> <%= link_to "#{img} Stoney Creek Medical Walk-In Clinic".html_safe, root_path, id: "logo" %></li>
  </ul>
  <ul class="nav navbar-nav navbar-right">
    <li class="login_link"><%= link_to "<i class='glyphicon glyphicon-log-in'></i> Login".html_safe, new_user_session_path %></li>
  </ul>
<% else %>
  <li class="nav-item bg-primary" style="height: 80px; width:12003px; "><%= link_to "Stoney Creek Medical Walk-In Clinic".html_safe, root_path, id: "mobile_logo" %>
  <div class="ml-3"><font size=3 color=white style="margin-left: 20px;">140 Centennial Pkwy N, Hamilton, ON L8E 1H9 </font></div>
  </li>
<% end %>
</nav>
<% end %>
