<%
   provide(:title, "Doctor's Report")
   @doctor = Doctor.find(@report.doc_id)
%>
 
<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<b class="modal-title" id="myModalLabel"><%= @doctor.lname %>: Claims Report for <%= @report.sdate %></b>
</div>
<div class="modal-body">
	<iframe id="myModal" src="/reports/<%= @report.filename %>" frameborder="0" width="100%" height="600px"></iframe>
</div>
<div class="modal-footer">
  <button class="btn btn-primary" class="close" data-dismiss="modal">Dismiss</button>
</div>

<script language="javascript" type="text/javascript">
    $(document).ready(function() {
        getElementById('myModal').contentDocument.location.reload();
    )};
</script>

