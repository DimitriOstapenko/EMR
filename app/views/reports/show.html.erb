<% provide(:title, @report.name) %>

<p>
    <div class="col-md-11 col-md-offset-1">
	   <pre>
	      Report: <b><%= @report.name %> </b>

	      Type:       <%= REPORT_TYPES.invert[@report.rtype] %>
	      Doctor:     <%= @report.doctor.lname rescue 'All Active'%>
	      Date:	  <%= @report.sdate %>
              <% if @report.rtype > 1 %>
	      End Date:   <%= @report.edate %>
	      <% end %>
	      Visits:     <%= @visits.count %>

	      Grand Total: <b><%= @total.round(2) %></b>
           </pre>

<table> <!--class="table table-hover table-condensed" > -->
  <thead>
      <tr>
          <th>Date</th>
          <th>Visit Id</th>
          <th>Patient</th>
          <th>OHIP#</th>
          <th>Diagnosis</th>
          <th>Procedure(s)</th>
          <th>Bill.Type</th>
          <th>Ttl. Fee</th>
          <th>Status</th>
          <th>Entry By</th>
      </tr>
  </thead>
  <tbody>
          <%= render partial: "visit", collection: @visits %>
  </tbody>
</table>

<div class="bottom_buttons ">
    <%= will_paginate @visits, class: "btn" %>
    <% if @report.filespec.blank? %> 
       <%= button_to "Generate PDF", export_report_path, class: "btn btn-primary", :method => "get" %>
    <% else %>
       <%= button_to "Show PDF", show_pdf_report_path, class: "btn btn-primary", :method => "get" %>
    <% end %>
</div>

</div>
